# This file is managed by Ansible, do not edit manually

[user]
default = {{ wsl_distribution_config_user_default }}

[boot]
systemd = {{ wsl_distribution_config_boot_systemd | lower }}
{% if wsl_distribution_config_boot_command is defined %}
command = {{ wsl_distribution_config_boot_command }}
{% endif %}

[automount]
enabled = {{ wsl_distribution_config_automount_enabled | lower }}
mountFsTab = {{ wsl_distribution_config_automount_mount_fs_tab | lower }}
root = {{ wsl_distribution_config_automount_root }}
{% if wsl_distribution_config_automount_options is defined %}
options = {{ wsl_distribution_config_automount_options }}
{% endif %}

[interop]
enabled = {{ wsl_distribution_config_interop_enabled | lower }}
appendWindowsPath = {{ wsl_distribution_config_interop_append_windows_path | lower }}

[network]
generateHosts = {{ wsl_distribution_config_network_generate_hosts | lower }}
generateResolvConf = {{ wsl_distribution_config_network_generate_resolv_conf | lower }}
{% if wsl_distribution_config_network_hostname is defined %}
hostname = {{ wsl_distribution_config_network_hostname }}
{% endif %}

{% if wsl_distribution_extra_configs is defined %}
{% for section, properties in wsl_distribution_extra_configs.items() %}
[{{ section }}]
{% for property, value in properties.items() %}
{{ property }} = {{ value }}
{% endfor %}

{% endfor %}
{% endif %}